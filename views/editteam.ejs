<% include ../partials/header %> 


<div class= "container">
    
    <h1 style="text-align: center">Edit "<%=team.name%>" Team</h1>
    <div style="width: 30%; margin:30px auto;">
        <form action="/teams/<%=team._id%>?_method=PUT" method = "POST">
            <div class="form-group">
            <p>Enter Team Name:</p>
            <input class="form-control" type="text" name="team[name]" value="<%=team.name%>">
            </div>
            <div class="form-group">
            <p>Enter image</p>
            <input class="form-control" type="text" name="team[image]" value="<%=team.image%>">
            </div>
            <div>
                <p>Add Members:</p>
            </div>
            <button class="btn btn-primary btn-block">Save Changes</button>
        </form>
    </div>
</div>


<% include ../partials/footer %> 