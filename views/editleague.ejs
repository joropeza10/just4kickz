<% include ../partials/header %> 


<div class= "container">
    
    <h1 style="text-align: center">Edit <%=league.name%> League</h1>
    <div style="width: 30%; margin:30px auto;">
        <form action="/leagues/<%=league._id%>?_method=PUT" method = "POST">
            <div class="form-group">
            <p>Enter League Name:</p>
            <input class="form-control" type="text" name="league[name]" value= "<%=league.name%>">
            </div>
            <div class="form-group">
            <p>Enter image</p>
            <input class="form-control" type="text" name="league[image]" value= "<%=league.image%>">
            </div>
            <button class="btn btn-primary btn-block">EDIT League</button>
        </form>
    </div>
</div>


