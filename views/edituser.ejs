<% include ../partials/header %> 


<div class= "container">
    
    <h1 style="text-align: center">Edit your profile <%=user.username%>!</h1>
    <div style="width: 30%; margin:30px auto;">
        <form action="/users/profile/<%=user._id%>?_method=PUT" method = "POST">
            <div class="form-group">
            <p>Enter Username:</p>
            <input class="form-control" type="text" name="username" placeholder="<%=user.username%>">
            </div>
            <div class="form-group">
            <p>Enter your password</p>
            <input class="form-control" type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
            <p>Enter your First Name:</p>
            <input class="form-control" type="text" name="firstName" placeholder="First Name">
            </div>
            <div class="form-group">
            <p>Enter your Last Name:</p>
            <input class="form-control" type="text" name="lastName" placeholder="Last Name">
            </div>
            <div class="form-group">
            <p>Enter your e-mail:</p>
            <input class="form-control" type="email" name="email" placeholder="email@email.com">
            </div>
            <div class="form-group">
            <p>Enter phone:</p>
            <input class="form-control" type="phone" name="phone" placeholder="555-555-555">
            </div>
            <button class="btn btn-primary btn-block">Edit</button>
        </form>
    </div>
</div>


<% include ../partials/footer %> 