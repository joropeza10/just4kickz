<% include ../partials/header %> 


<div class= "container">
    
    <h1 style="text-align: center">Create Team</h1>
    <div style="width: 30%; margin:30px auto;">
        <form action="/teams/newteam" method = "POST">
            <div class="form-group">
            <p>Enter Team Name:</p>
            <input class="form-control" type="text" name="team[name]" placeholder="Team Name">
            </div>
            <div class="form-group">
            <p>Enter image</p>
            <input class="form-control" type="text" name="team[image]" placeholder="Image URL">
            </div>
            <button class="btn btn-primary btn-block">Create Team</button>
        </form>
    </div>
</div>


